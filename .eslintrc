{
    "extends": ["react-app", "prettier"],
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "printWidth": 120,
                "trailingComma": "es5"
            }
        ],
        "quotes": [2, "single", { "allowTemplateLiterals": true }]
    }
}
